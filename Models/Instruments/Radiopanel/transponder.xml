<?xml version="1.0" encoding="UTF-8" ?>

<!-- Boeing 757-200 for FlightGear -->
<!-- ADF panal for 757 Pedestal -->

<PropertyList>

        <path>transponder.ac</path>

	<animation>
		<type>material</type>
		<object-name>Xpndr_plate</object-name>
		<condition>
        	    <not>
            		<property>sim/rendering/rembrandt/enabled</property>
        	    </not>
      		</condition>
      		<emission>
		    <red>0.4</red>
		    <green>0.4</green>
		    <blue>0.4</blue>
		    <factor-prop>sim/multiplay/generic/float[3]</factor-prop>
		</emission>
	</animation>

	<!-- POWER -->
	<animation>
                <type>select</type>
                <object-name>XpndrDigit1</object-name>
                <object-name>XpndrDigit2</object-name>
                <object-name>XpndrDigit3</object-name>
                <object-name>XpndrDigit4</object-name>
                <condition>
                    <greater-than>
                        <property>systems/electrical/outputs/efis</property>
                        <value>15</value>
                    </greater-than>
                </condition>
        </animation>

	<!-- Squawk Digits -->
	<animation>
                <type>textranslate</type>
                <object-name>XpndrDigit1</object-name>
                <property>instrumentation/transponder/inputs/display[0]</property>
                <factor>0.1</factor>
                <step>1</step>
                <axis>
                        <x>0</x>
                        <y>1</y>
                </axis>
        </animation>
	<animation>
                <type>textranslate</type>
                <object-name>XpndrDigit2</object-name>
                <property>instrumentation/transponder/inputs/display[1]</property>
                <factor>0.1</factor>
                <step>1</step>
                <axis>
                        <x>0</x>
                        <y>1</y>
                </axis>
        </animation>
	<animation>
                <type>textranslate</type>
                <object-name>XpndrDigit3</object-name>
                <property>instrumentation/transponder/inputs/display[2]</property>
                <factor>0.1</factor>
                <step>1</step>
                <axis>
                        <x>0</x>
                        <y>1</y>
                </axis>
        </animation>
	<animation>
                <type>textranslate</type>
                <object-name>XpndrDigit4</object-name>
                <property>instrumentation/transponder/inputs/display[3]</property>
                <factor>0.1</factor>
                <step>1</step>
                <axis>
                        <x>0</x>
                        <y>1</y>
                </axis>
        </animation>
	
	<!-- Knobs -->
	<animation>
		<type>pick</type>	
		<object-name>Xpndr.1knob</object-name>
                <action>
                        <button>0</button>
                        <button>3</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[0]</property>
                                <step>1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
                <action>
                        <button>1</button>
                        <button>4</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[0]</property>
                                <step>-1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
        </animation>

	<animation>
		<type>pick</type>	
		<object-name>Xpndr.2knob</object-name>
                <action>
                        <button>0</button>
                        <button>3</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[1]</property>
                                <step>1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
                <action>
                        <button>1</button>
                        <button>4</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[1]</property>
                                <step>-1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
        </animation>

	<animation>
		<type>pick</type>	
		<object-name>Xpndr.3knob</object-name>
                <action>
                        <button>0</button>
                        <button>3</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[2]</property>
                                <step>1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
                <action>
                        <button>1</button>
                        <button>4</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[2]</property>
                                <step>-1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
        </animation>

	<animation>
		<type>pick</type>	
		<object-name>Xpndr.4knob</object-name>
                <action>
                        <button>0</button>
                        <button>3</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[3]</property>
                                <step>1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
                <action>
                        <button>1</button>
                        <button>4</button>
                        <repeatable type="bool">true</repeatable>
                        <binding>
                                <command>property-adjust</command>
                                <property>instrumentation/transponder/inputs/display[3]</property>
                                <step>-1</step>
                                <max>8</max>
				<min>0</min>
				<wrap>true</wrap>
                        </binding>
                </action>
        </animation>

	<!-- Ident -->
	<animation>
		<type>pick</type>
		<object-name>Ident.btn</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>nasal</command>
				<script>Boeing757.transponder.ident();</script>
			</binding>
		</action>
	</animation>

	<!-- Mode knob -->
	<animation>
		<type>pick</type>
		<object-name>Xpndr.Knob</object-name>
		<action>
			<button>0</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/transponder/inputs/knob-pos</property>
				<step>1</step>
				<min>0</min>
				<max>4</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<action>
			<button>1</button>
			<repeatable>false</repeatable>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/transponder/inputs/knob-pos</property>
				<step>-1</step>
				<min>0</min>
				<max>4</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>

	<animation>
		<type>rotate</type>
		<object-name>Xpndr.Knob</object-name>
		<property>instrumentation/transponder/inputs/knob-pos</property>
		<factor>-30</factor>
		<center>
		    <x-m>-0.009</x-m>
		    <y-m> 0.038</y-m>
		    <z-m> 0.796</z-m>
		</center>
		<axis>
		    <x>0</x>
		    <y>0</y>
		    <z>1</z>
		</axis>
	</animation>

</PropertyList>
