<?xml version="1.0"?>


<PropertyList>
    <name>oilpressure</name>
    <w-base>55</w-base>
    <h-base>55</h-base>

    <layers>
    
            <layer>
            <name>ctlsrf</name>
            <emissive>true</emissive>
            <w>70</w>
            <h>70</h>
            <texture>
                <path>Aircraft/757-200/Models/Instruments/secondary_EICAS/oil.png</path>
                <x1>0.1</x1>
                <y1>0.1</y1>
                <x2>0.9</x2>
                <y2>0.9</y2>
            </texture>
            </layer>

        <layer>
            <name>needle1</name>
            <emissive>true</emissive>
            <w>6</w>
            <h>6</h>
            <texture>
                <path>Aircraft/757-200/Models/Instruments/secondary_EICAS/needle.png</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
                    <transformations>
            <transformation>
                <type>y-shift</type>
                <property>/engines/engine[1]/oilp-norm</property>
				<scale>22</scale>
				<offset>1</offset>
            </transformation>
            			<transformation>
				<type>x-shift</type>
				<offset>3</offset>
			</transformation>
        <transformation>
				<type>y-shift</type>
				<offset>-10</offset>
			</transformation>
            </transformations>
        </layer>
        
                <layer>
            <name>needle2</name>
            <emissive>true</emissive>
            <w>6</w>
            <h>6</h>
            <texture>
                <path>Aircraft/757-200/Models/Instruments/secondary_EICAS/needle_2.png</path>
                <x1>0</x1>
                <y1>0</y1>
                <x2>1</x2>
                <y2>1</y2>
            </texture>
                    <transformations>
            <transformation>
                <type>y-shift</type>
                <property>/engines/engine[0]/oilp-norm</property>
				<scale>22</scale>
				<offset>1</offset>
            </transformation>
            			<transformation>
				<type>x-shift</type>
				<offset>-3</offset>
			</transformation>
        <transformation>
				<type>y-shift</type>
				<offset>-10</offset>
			</transformation>
            </transformations>
        </layer>
        
            <layer>
        <name>oilpr</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>5</point-size>
        <color>
            <red>0.7</red>
            <green>0.7</green>
            <blue>0.7</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>/engines/engine[1]/oilp-norm</property>
                <format>%1.2f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>6.5</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>2</offset>
            </transformation>
        </transformations>
    </layer>
        <layer>
        <name>oilpr2</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>5</point-size>
        <color>
            <red>0.7</red>
            <green>0.7</green>
            <blue>0.7</blue>
        </color>
        <chunks>
            <chunk>
                <type>number-value</type>
                <property>/engines/engine[0]/oilp-norm</property>
                <format>%1.2f</format>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-20</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>2</offset>
            </transformation>
        </transformations>
    </layer>
    
        <layer>
        <name>OIL</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>4</point-size>
        <color>
            <red>0.25</red>
            <green>0.5</green>
            <blue>0.7</blue>
        </color>
        <chunks>
            <chunk>
                <type>literal</type>
                <text>OIL</text>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>-15</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>-7</offset>
            </transformation>
        </transformations>
    </layer>
    
            <layer>
        <name>OIL</name>
        <type>text</type>
        <font>arial_black</font>
        <point-size>4</point-size>
        <color>
            <red>0.25</red>
            <green>0.5</green>
            <blue>0.7</blue>
        </color>
        <chunks>
            <chunk>
                <type>literal</type>
                <text>PRESS</text>
            </chunk>
        </chunks>
        <transformations>
            <transformation>
                <type>x-shift</type>
                <offset>5.5</offset>
            </transformation>
            <transformation>
                <type>y-shift</type>
                <offset>-7</offset>
            </transformation>
        </transformations>
    </layer>




    </layers>

</PropertyList>
