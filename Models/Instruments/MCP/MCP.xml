	<animation>
		<name>Heading hold button pick</name>
		<type>pick</type>
		<object-name>HDG.btn</object-name>
		<object-name>HDGtoggle</object-name>
		<action>
			<button>0</button>
			<repeatable type="bool">false</repeatable>
			<binding>
				<command>nasal</command>
				<script>Boeing757.afds.input(0,2);</script>
			</binding>
		</action>
