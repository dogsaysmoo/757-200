		<object-name>VS.circle1</object-name>
		<property>instrumentation/afds/settings/vs-display</property>
		<factor>0.0001</factor>
		<step>1000</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Vertical speed setting 100's</name>
		<type>textranslate</type>
		<object-name>VS.circle2</object-name>
		<property>instrumentation/afds/settings/vs-display</property>
		<factor>0.001</factor>
		<step>100</step>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<name>Vertical speed setting 10's</name>
		<type>textranslate</type>
