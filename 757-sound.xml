    <!-- APU sounds -->
    <apu>
	<name>APUstart</name>
	<path>Aircraft/757-200/Sounds/apu_strt.wav</path>
	<mode>once</mode>
	<condition>
		<greater-than>
		  <property>controls/APU/off-start-run</property>
		  <value>0</value>
		</greater-than>
	</condition>
    </apu>
    <apu>
	<name>APUrun</name>
        <path>Aircraft/757-200/Sounds/apu_run.wav</path>
	<mode>looped</mode>
	<condition>
	    <property>engines/apu/running</property>
	</condition>
    </apu>
    <apu>
	<name>APUstop</name>
	<path>Aircraft/757-200/Sounds/apu_stop.wav</path>
	<mode>once</mode>
	<condition>
		<equals>
		  <property>controls/APU/off-start-run</property>
		  <value>0</value>
		</equals>
	</condition>
    </apu>

    <pax-env>
	<name>pax</name>
	<mode>looped</mode>
	<path>Aircraft/757-200/Sounds/envelope_s.wav</path>
	<condition>
	  <or>
	    <less-than>
		<property>velocities/vertical-speed-fps</property>
		<value>-88</value>
	    </less-than>
	    <less-than>
		<property>orientation/roll-deg</property>
		<value>-70</value>
	    </less-than>
	    <greater-than>
		<property>orientation/roll-deg</property>
		<value>70</value>
	    </greater-than>
	   </or>
	</condition>
    </pax-env>

