        <path>Aircraft/757-200/Sounds/avhum.wav</path>
        <mode>looped</mode>
        <type>avionics</type>
	<condition>
	  <and>
            <property>sim/current-view/internal</property>
            <property>/systems/electrical/outputs/efis</property>
	  </and>
	</condition>
        <volume>
	    <factor>0.1</factor>
        </volume>
    </avhum>
        
